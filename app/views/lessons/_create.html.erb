<div class="modal fade" id="newlessonModal" tabindex="-1" role="dialog" aria-labelledby="newlessonModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newlessonModalLabel">NEW LESSON</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <div class="container gray-background pb-4">
          <div class="row">
            <div class="col-sm-10 offset-sm-1 mt-3">
              <%= simple_form_for(lesson) do |f| %>
                <div class="form-inputs">
                  <%= f.input :date,
                              required: true %>
                  <%= f.input :duration, label: "Duration (minutes)",
                              input_html: { min: 0 },
                              required: true %>
                  <%= f.input :price, label: "Price (yen)",
                              input_html: { min: 0 },
                              required: true %>
                  <%= f.association :category,
                              required: true %>
                  <%= f.input :city,
                              required: true %>
                  <%= f.input :address,
                              required: true %>
                  <%= f.input :detail,
                              required: false,
                              :input_html => {:rows => 4} %>
                </div>

                <div class="d-flex justify-content-center">
                  <div class="form-actions">
                    <%= f.button :submit, "CREATE", class: "form-create" %>
                  </div>
                </div>

              <% end %>
            </div>
          </div>
        </div>


      </div>
<!--       <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">CLOSE</button>
        <button type="button" class="btn btn-primary">CREATE LESSON</button>
      </div> -->
    </div>
  </div>
</div>
