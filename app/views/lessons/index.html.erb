<div class="main-container d-flex justify-content-between">
  <div class="cards pb-2">
    <% @lessons.each do |lesson| %>
      <%= link_to lesson_path(lesson), :action => 'go' do %>
        <div class="card pt-3 px-3">
          <div class="title d-flex justify-content-between">
            <h4><%= lesson.category.name.upcase %></h4>
            <%= cl_image_tag lesson.user.avatar, class: "avatar" %>
          </div>
          <div class="desc my-3">
            <p><%= lesson.detail %></p>
            <div class="details">
              <ul class="d-flex">
                <li class="mr-3"><i class="fas fa-table"></i> <%= lesson.nice_date %></li>
                <li class="mr-3"><i class="fas fa-clock"></i> <%= lesson.duration %> mins</li>
                <li class="mr-3"><i class="fas fa-yen-sign"></i> <%= lesson.price %></li>
                <li class="mr-3"><i class="fas fa-map-marker-alt"></i> <%= lesson.city %>, <%= lesson.postal_code %></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="map">
    <div class="mapouter">
      <div class="gmap_canvas">
        <iframe id="gmap_canvas" src="https://maps.google.com/maps?q=osaka%20university&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="yes" marginheight="0" marginwidth="0">
        </iframe>
      </div>
      <style>
    </style>
    </div>
  </div>
  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
</div>
