<div class="my-container">
  <div class="header-text">
    <h2 id=title>FIND YOUR <span class="color-pink">LESSON</span></h2>
    <h2 id=subtitle>LEARN SOMETHING <span class="color-pink">NEW</span></h2>
    <div class="search-bar">
      <%= form_tag lessons_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search lessons or location"
        %>
      <% end %>
    </div>
    <div class="left-card">
      <i class="fas fa-user-friends"></i>
      <p>One-on-one lessons</p>
    </div>
    <div class="middle-card">
      <i class="fas fa-school"></i>
      <p>Teach lessons and take lessons</p>
    </div>
    <div class="right-card">
      <i class="fas fa-user-clock"></i>
      <p>Lessons anytime, anyplace</p>
    </div>
  </div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag "root-teach-code.jpg", alt: "two people in front of computer coding" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "root-girl-guitar.jpg", alt: "girl on guitar" %>
      </div>
      <div class="carousel-item">
        <%= image_tag "root-talk.jpg", alt: "3 girls in hijab talking" %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<script>
  const search = document.querySelector(".search-bar");
  search.addEventListener('keypress', (event) => {
    const key = event.which || event.keyCode;
    if (key === 13) { // 13 is enter
      // code for enter
      window.location.href = "/lessons";
    }
  });
</script>
